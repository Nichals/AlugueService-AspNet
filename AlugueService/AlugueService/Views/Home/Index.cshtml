@using Chart.Mvc
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-xs-11">
        <!-- Donut chart -->
        <div class="box-default">
            <div class="col-lg-3 col-xs-6">
                <!-- small box Alugueis ativos-->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@ViewBag.AlugueisAtivos</h3>
                        <p>Alugueis ativos</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-shopping-cart"></i>
                    </div>
                    @*<a href="#" class="small-box-footer">
                        Mais informações <i class="fa fa-arrow-circle-right"></i>
                    </a>*@
                </div>
            </div>

            <div class="col-lg-3 col-xs-6">
                <!-- small box ProdutosCadastrados-->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@ViewBag.ProdutosCadastrados</h3>
                        <p>Produtos cadastrados</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-suitcase"></i>
                    </div>
                    @*<a href="#" class="small-box-footer">
                        Mais informações <i class="fa fa-arrow-circle-right"></i>
                    </a>*@
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box ClientesCadastrados-->
                <div class="small-box bg-gray">
                    <div class="inner">
                        <h3>@ViewBag.ClientesCadastrados</h3>
                        <p>Clientes cadastrados</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-user"></i>
                    </div>
                    @*<a href="#" class="small-box-footer">
                        Mais informações <i class="fa fa-arrow-circle-right"></i>
                    </a>*@
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box OperadoresCadastrados -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@ViewBag.OperadoresCadastrados</h3>
                        <p>Operadores cadastrados</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-users"></i>
                    </div>
                    @*<a href="#" class="small-box-footer">
                        Mais informações <i class="fa fa-arrow-circle-right"></i>
                    </a>*@
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
</div>

<div class="col-xs-11">
    <!-- Donut chart -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <i class="fa fa-pie-chart"></i>

            <h3 class="box-title">Status dos produtos</h3>
        </div>
        <div class="box-body">
            <div id="donut-chart" style="height: 300px;"></div>

        </div>
        <!-- /.box-body-->
    </div>
    <!-- /.box -->
</div>


<!-- ./wrapper -->
<!-- REQUIRED JS SCRIPTS -->
<!-- jQuery 2.2.3 -->
<script src="~/Scripts/jquery-3.1.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/AdminLTE/plugins/flot/jquery.flot.min.js"></script>
<script src="~/Content/AdminLTE/plugins/flot/jquery.flot.resize.min.js"></script>
<script src="~/Content/AdminLTE/plugins/flot/jquery.flot.pie.js"></script>
<script src="~/Content/AdminLTE/plugins/flot/jquery.flot.categories.min.js"></script>

<!-- Page script -->
<script>
    $(function () {
        /*
         * DONUT CHART
         * -----------
         */

        var donutData =@Html.Raw(ViewBag.Valor);

        $.plot("#donut-chart", donutData, {
            series: {
                pie: {
                    show: true,
                    radius: 1,
                    innerRadius: 0.5,
                    label: {
                        show: true,
                        radius: 2 / 3,
                        formatter: labelFormatter,
                        threshold: 0
                    }

                }
            },
            legend: {
                show: false
            }
        });
        /*
         * END DONUT CHART
         */

    });

    /*
     * Custom Label formatter
     * ----------------------
     */
    function labelFormatter(label, series) {
        return '<div style="font-size:13px; text-align:center; padding:2px; color: #000000; font-weight: 600;">'
            + label
            + "<br>"
            + series.data + "</div>";
    }
</script>
