        //Script para validar o preço
        $(function () {
            $('#inputPreco').maskMoney({ allowNegative: false, allowZero: false, thousands: '.', decimal: ',' });
        })
        $(function () {
            $('#inputMulta').maskMoney({ allowNegative: false, allowZero: false, thousands: '.', decimal: ',' });
        })
        $(function () {
