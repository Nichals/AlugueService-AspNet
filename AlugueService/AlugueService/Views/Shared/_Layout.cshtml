@using System

@{ 
    var operadorNome = Session["nomeOperador"].ToString();
}

<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AlugueService</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Content/AdminLTE/AdminLTE.min.css" rel="stylesheet" />
    <!-- datepicker style -->
    <link href="~/Content/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <!-- datatables style -->
    <link href="~/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />


    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link href="~/Content/AdminLTE/skins/skin-black.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link rel="shortcut icon" type="image/png" href="/favicon.png" />

</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition skin-black sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><img src="~/LogoAS_P.png" class="user-image" alt="Big logo Image"></span>

                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><img src="~/LogoAS_G.png" class="user-image" alt="Big logo Image"></span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src="~/Operador_50x50.png" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@operadorNome</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <p>
                                        Operador: @operadorNome
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-right">
                                        <a href="@Url.Action("Logout", "Login")" class="btn btn-default btn-danger"><span style="color:white">Sign out</span></a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <li class="header" style="color:white">Menu Principal</li>
                    <!-- Sidebar Menu - Cliente -->
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-user"></i> <span>Cliente</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Cadastro", "Cliente")"> <i class="fa fa-user-plus" style="color:white"></i>Cadastro</a></li>
                            <li><a href="@Url.Action("Consulta", "Cliente")"> <i class="fa fa-edit" style="color:white"></i>Consulta</a></li>
                        </ul>
                    </li>
                    <!-- /.sidebar-menu - Cliente -->
                    <!-- Sidebar Menu - Operador -->
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-users"></i> <span>Operador</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Cadastro", "Operador")"> <i class="fa fa-user-plus" style="color:white"></i>Cadastro</a></li>
                            <li><a href="@Url.Action("Consulta", "Operador")"> <i class="fa fa-edit" style="color:white"></i>Consulta</a></li>
                        </ul>
                    </li>
                    <!-- /.sidebar-menu - Operador -->
                    <!-- Sidebar Menu - Produto -->
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-suitcase"></i> <span>Produto</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Cadastro", "Produto")"> <i class="fa fa-plus" style="color:white"></i>Cadastro</a></li>
                            <li><a href="@Url.Action("Consulta", "Produto")"> <i class="fa fa-edit" style="color:white"></i>Consulta</a></li>
                        </ul>
                    </li>
                    <!-- /.sidebar-menu - Produto -->
                    <!-- Sidebar Menu - Aluguel -->
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-shopping-cart"></i> <span>Aluguel</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Cadastro", "Aluguel")"> <i class="fa fa-cart-plus" style="color:white"></i>Cadastro</a></li>

                            <li><a href="@Url.Action("Consulta", "Aluguel")"> <i class="fa fa-edit" style="color:white"></i>Consulta</a></li>
                        </ul>
                    </li>
                    <!-- /.sidebar-menu - Aluguel -->
                    <!-- Sidebar Link - Pré-Aluguel -->
                    <li><a href="@Url.Action("Index", "PreAluguel")"> <i class="fa fa-cart-arrow-down"></i><span>Pré-Aluguel</span></a></li>

                    <!-- /.sidebar-link - pré-aluguel -->
                    <!-- Sidebar Link - Relatório -->
                    @*<li><a href="@Url.Action("Index", "Relatorio")"> <i class="glyphicon glyphicon-dashboard"></i><span>Relatório</span></a></li>*@
                    <!-- /.sidebar-link - Relatório -->
                    <!-- Sidebar Link - Configuração -->
                    <li><a href="@Url.Action("Index", "Configuracao")"> <i class="fa fa-gears"></i><span>Configuração</span></a></li>
                    <!-- /.sidebar-link - Configuração -->
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewBag.Title
                    <small>@ViewBag.Subtitle</small>
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="container body-content">
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">

            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2016 <a href="#">AlugueService</a>.</strong> Todos os direitos reservados.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/AdminLTE/app.min.js"></script>
    <script src="~/Scripts/modalform.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/AdminLTE/plugins/flot/jquery.flot.min.js"></script>
    <script src="~/Content/AdminLTE/plugins/flot/jquery.flot.resize.min.js"></script>
    <script src="~/Content/AdminLTE/plugins/flot/jquery.flot.pie.js"></script>
    <script src="~/Content/AdminLTE/plugins/flot/jquery.flot.categories.min.js"></script>
    <!-- Adicionados pelo Antonio -->
    <script src="~/Scripts/jquery.mask.js"></script>
    <script src="~/Scripts/jquery.maskMoney.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.maskMoney.js" type="text/javascript"></script>
    @*<script src="~/Content/AdminLTE/plugins/ckeditor/ckeditor.js"></script>*@
    <script src="~/Content/AdminLTE/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/AdminLTE/plugins/datepicker/locales/bootstrap-datepicker.pt-BR.js"></script>
    <script src="~/Content/AdminLTE/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.js"></script>
    @RenderSection("Scripts", false/*required*/)


